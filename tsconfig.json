{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "files": [
    "src/core.ts",
    "src/core.spec.ts"
  ],
  "compileOnSave": true,
  "buildOnSave": true,
  "exclude": [
    "node_modules"
  ]
}